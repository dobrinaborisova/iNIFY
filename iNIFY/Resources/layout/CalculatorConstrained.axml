<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
    <EditText
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:layout_marginStart="8dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />
    <Button
        android:id="@+id/button0"
        android:background="@drawable/button_selector"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/comma"
        app:layout_constraintTop_toTopOf="@+id/comma" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button5" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintRight_toLeftOf="@+id/button8" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:layout_constraintLeft_toRightOf="@+id/button4" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button8" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="311dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button8" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:layout_constraintRight_toLeftOf="@+id/button5" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/comma"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text=","
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintRight_toRightOf="@+id/button1" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/equal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        app:layout_constraintLeft_toRightOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
    <Button
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="DEL"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/divide"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="51dp"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        android:layout_marginLeft="-1dp" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/divide"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="รท"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintRight_toRightOf="@+id/del"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/del" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="x"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/subtract"
        app:layout_constraintRight_toRightOf="@+id/divide"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="51dp"
        app:layout_constraintLeft_toLeftOf="@+id/divide" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/subtract"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="-"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/add"
        app:layout_constraintRight_toRightOf="@+id/multiply"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/multiply" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="191dp"
        android:orientation="horizontal" />
    <Button
        android:background="@drawable/button_selector"
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/subtract"
        android:layout_marginTop="48dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/subtract"
        app:layout_constraintTop_toTopOf="@+id/equal"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>